<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="164dp"
    android:layout_height="176dp"
    android:layout_margin="@dimen/margin_standard"
    android:background="@drawable/warehouse_btn_bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/warehouse_add_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/ic_add_circle_outline_green_24dp"
        android:layout_margin="32dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/warehouse_add_btn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить элемент"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#28B473"/>

</LinearLayout>